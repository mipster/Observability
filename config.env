# ZaraLive Observability Stack Environment Configuration

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_PORT=3001

# Prometheus Configuration
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_DAYS=15

# Alertmanager Configuration
ALERTMANAGER_PORT=9093

# Node Exporter Configuration
NODE_EXPORTER_PORT=9100

# Application Endpoints (for metrics scraping)
ZARALIVE_APP_URL=host.docker.internal:8080
ZARALIVE_FRONTEND_URL=host.docker.internal:3000

# Logging Configuration
LOG_LEVEL=info

# Docker Configuration
DOCKER_NETWORK_NAME=observability
